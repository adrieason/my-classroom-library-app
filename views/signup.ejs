<%- include('partials/header') -%>
<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-warning shadow-lg"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-warning shadow-lg"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
                  <div class="card-body">
                    <div class="form-control">
                <form action="/signup" method="POST">
                    <div class="mb-3">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="input input-bordered w-full max-w-xs" id="userName" name="userName">
                      </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="input input-bordered w-full max-w-xs" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>



                    <div class="mb-3">
                      <label for="role" class="form-label">Teacher or Student</label>
                  
                    

                    <select name="role" id="role" class="select select-bordered w-full max-w-xs">
                      <option value="Teacher">Teacher</option>
                      <option value="Student">Student</option>
                    </select>
</div>



                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password"  class="input input-bordered w-full max-w-xs" id="password" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="input input-bordered w-full max-w-xs" id="confirmPassword" name="confirmPassword">
                      </div>
                    <button type="submit" class="inline-block cursor-pointer rounded-md bg-gray-800 px-4 py-3 text-center text-sm font-semibold uppercase text-white transition duration-200 ease-in-out hover:bg-gray-900">Submit</button>
                  </form>
                </div>
              </div>
            </div>
                </div>
              </div>
<%- include('partials/footer') -%>