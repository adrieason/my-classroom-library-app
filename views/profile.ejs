<%- include('partials/header') -%>




<!--quick math to determine how many books the user logged in has checked out and on hold to determine what data shows on the page-->
<% 
let booksCheckedOut = 0
let booksOnHold = 0
for(var i=0; i<books.length; i++) {
  if (books[i].whereIsTheBook===user.userName){
    booksCheckedOut +=1
    }
  if (books[i].holdBook.includes(user.userName)===true){
    booksOnHold += 1
  }
  }%>

<!--Welcomes the User to the site!-->
<div class="bg-white">
<div class="mx-auto max-w-2xl py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
            <h1 class="text-5xl font-bold">Hello there,  <%= user.userName[0].toUpperCase()+user.userName.substring(1) %>!</h1>
<br>

<!--If user is a teacher they see a list of their top readers -->
              <%if(user.role == "Teacher"){ %>              
                <h4 class="text-2xl font-bold">Your Top Readers Are...</h4>
                <ol>
                  
                  <% for(var i=0; i<3; i++) {%>

                  <li class="text-2xl"><%=i+1%>. <%=(users[i].userName[0].toUpperCase()+users[i].userName.substring(1))%>, <%=(users[i].booksRead)%> books.</li>

                  <% } %>
                </ol>
                <br><br>

<!--TO DO: create an ability for teacher to view each students book list
                <h4 class="text-2xl font-bold">Select a Student to View their report...</h4>
                <select class="select select-info w-full max-w-xs">
                  <option disabled selected>Select Student</option>
                <% for(var i=0; i<users.length; i++) {%>
                  <%if(users[i].role == "Student"){ %>
                <option><%=( users[i].userName[0].toUpperCase()+users[i].userName.substring(1))%></option>
                <% } %>
                <% } %>                             
                </select>
                <button class="btn">Go</button>

               <% } %>  

            <!--  -->
<br>
<br>
<%if(user.role == "Teacher"){ %>    
              <h1 class="text-3xl font-bold">Checked Out Books</h1><br>

<div class="container">
  <div class="overflow-x-auto">
    <table class="table table-compact w-full">
      <tr>
        <th></th>
        <th>Book</th>
        <th>Where is the Book</th>
        <th>Due Date</th>
        <th># of Student on Hold</th>
      </tr>
      <% for(var i=0; i<books.length; i++) {%>
          <%if(books[i].whereIsTheBook != "Bookshelf"){ %>  
            <%if(books[i].whereIsTheBook != user.userName){ %>          
          <tr>
            <td><div class="avatar">
              <div class="w-24 rounded-xl">
                <a href="/book/<%= books[i]._id%>">
                <img src="<%= books[i].image %>" />
                </a>
              </div>
              </div>
            </td>
            <td><a href="/book/<%= books[i]._id%>"><%= books[i].title %></a></td>
            <td><%= books[i].whereIsTheBook[0].toUpperCase()+books[i].whereIsTheBook.substring(1) %></td>
<!--due date-->
            <td><%= books[i].dueDate %></td>
            
            <td><%= books[i].holdBook.length %></td>
          </tr>
          </a>
        </li>
                <% } %>

        <% } %>
        <% } %>
    </table>
  </div>
</div>  
<% } %>




<!--If user is a student the see a table of books they have checked out -->
              <%if(user.role == "Student"){ %>
              <span class="text-3xl font-bold"><strong>You currently have the following books checked out:</strong></span><br>
              <!--loop over all of the books this student has 'checked out' into a table-->
              <br>
              <div class="container">
                <div class="overflow-x-auto">
                  <%if(booksCheckedOut !== 0){ %>
                  <table class="table table-compact w-full">
                    <tr>
                      <th></th>
                      <th>Book</th>
                      <th>Author</th>
                      <th>Due Date</th>
                    </tr>
                    <% for(var i=0; i<books.length; i++) {%>
                      <% if (books[i].whereIsTheBook===user.userName){%>
                        <tr>
                          <td><div class="avatar">
                            <div class="w-24 rounded-xl">
                              <a href="/book/<%= books[i]._id%>">
                              <img src="<%= books[i].image %>" />
                              </a>
                            </div>
                            </div>
                          </td>
                          <td><a href="/book/<%= books[i]._id%>"><%= books[i].title %></a></td>
                          <td><%= books[i].author %></td>
                          <td><%= books[i].dueDate %></td>
                        </tr>
                        </a>
                      </li>
                      <% } %>
                      <% } %>
                    <% }else{%>
                      <!--If the user doesn't have any books checked out-->
                      <p>You have no books checked out.</p>
                      <%} %>
                  </table>
                </div>
              </div>  
             <%}%>
          </div>
<br>
<!--Only students can see this section of books the currently have on hold-->
<%if(user.role == "Student"){ %>
  <span class="text-3xl font-bold"><strong>You currently have the following books on hold:</strong></span><br>
  <%if(booksOnHold !== 0){ %>
  <!--loop over all of the books this student has 'checked out' into a table-->
  <br>
  <div class="container">
    <div class="overflow-x-auto">
      <table class="table table-compact w-full">
        <tr>
          <th></th>
          <th>Book</th>
          <th>Author</th>
          <th>Spot Number</th>
        </tr>
        <% for(var i=0; i<books.length; i++) {%>
          <% if (books[i].holdBook.includes(user.userName)===true){%>
            <tr>
              <td><div class="avatar">
                <div class="w-24 rounded-xl">
                  <a href="/book/<%= books[i]._id%>">
                  <img src="<%= books[i].image %>" />
                  </a>
                </div>
                </div>
              </td>        
              <td><a href="/book/<%= books[i]._id%>"><%= books[i].title %></a></td>
              <td><%= books[i].author %></td>
              <td><%= books[i].holdBook.indexOf(user.userName)+1 %></td>
            </tr>
            </a>
          </li>
          <% } %>
          <%} %>
      </table>
    </div>
  </div>  
  <% }else{%> 
    <!--If the user doesn't have any books checked out-->
    <p>You have no books on hold.</p>
    <%} %>
 <%}%>
</div>
<br>
<!-- shows badges students earn and number of books read/percent of your goal-->
<!-- only visible to students -->
<%if(user.role == "Student"){ %>
<div class="stats shadow">
  <div class="stat">
    <div class="stat-figure text-secondary">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
    </div>
    <div class="stat-title">Number of book<% if (user.booksRead!==1){%>s<% } %> read</div>
    <div class="stat-value"><%= user.booksRead%></div>
  </div>
  <div class="stat">
    <div class="stat-figure text-secondary">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path></svg>
    </div>
    <div class="stat-title">Percent of Goal</div>    
    <div class="stat-value"><%= Math.floor(user.booksRead/75*100)
      +"%" %></div>
  </div> 
</div><br><br>
<h2 class="text-3xl font-bold"><b>Badges Earned</b></h2>
<div class="avatar w-24 rounded">
<% if (user.booksRead>0){%><img class="w-10 rounded" src="https://res.cloudinary.com/dgudt0rnn/image/upload/v1671154254/jumping_dajnpm.png"><% } %> 
<% if (user.booksRead>5){%><img class="w-20 rounded"src="https://res.cloudinary.com/dgudt0rnn/image/upload/v1671154254/outstanding_syzzjw.png"><% } %> 
<% if (user.booksRead>15){%><img class="w-20 rounded" src="https://res.cloudinary.com/dgudt0rnn/image/upload/v1671154254/ace_v90ofi.png"><% } %> 
<% if (user.booksRead>20){%><img class="w-20 rounded" src="https://res.cloudinary.com/dgudt0rnn/image/upload/v1671154254/bookworm_uvxsjk.png"><% } %> 
<% if (user.booksRead>25){%><img class="w-20 rounded" src="https://res.cloudinary.com/dgudt0rnn/image/upload/v1671154254/terrific_ha4ozu.png"><% } %> 
<%}%>
</div>
      </div>
      <div class="col-6">
        <div class="row justify-content-center mt-5">
          <!--Only teacher has access to this link to add a book to the library-->
          <%if(user.role == "Teacher"){ %>
          <a class="btn btn-primary" href="/addabook">Add Books to the Shelf</a>
          <%}%>
          <a class="btn btn-primary" href="/feed">Look for Books</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>